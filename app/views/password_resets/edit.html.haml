!!! 5
%html
  %head
    %title= Setting.brand
    %meta{ charset: 'UTF-8' }
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all', data: { turbolinks_track: 'reload' }
    = javascript_include_tag 'application', data: { turbolinks_track: 'reload' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }
    %meta{ name: 'description', content: 'Learning Management System' }

  %body.background
    .container-fluid.h-100
      .row.h-100.align-items-center
        .col-md-6.mx-auto
          = form_for @user, { url: password_reset_path(@token), html: { method: :put } } do |f|
            .card
              .card-header
                %h3 Reset Password
              .card-body
                .form-group
                  %label= _('Email')
                  = f.email_field :email, class: 'form-control-plaintext', readonly: true
                .form-group
                  = f.password_field :password, class: 'form-control', placeholder: _('Password')
                .form-group
                  = f.password_field :password_confirmation, class: 'form-control', placeholder: _('Password confirmation')
              .card-footer
                = f.submit 'Reset', class: 'btn btn-primary float-right'
